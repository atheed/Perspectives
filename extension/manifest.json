{
    "manifest_version": 2,
    "name": "Perspectives",
    "version": "0.1",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "src/popup.html"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["lib/jquery-2.1.4.min.js", "src/content.js"]
        }
    ]
}