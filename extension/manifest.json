{
    "manifest_version": 2,
    "name": "Perspectives",
    "version": "0.1",
    "icons": {
        "16": "img/16x16.png",
        "48": "img/48x48.png",
        "128": "img/128x128.png"
    },
    "browser_action": {
        "default_popup": "src/popup.html"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["lib/jquery-2.1.4.min.js", "src/content.js"]
        }
    ]
}